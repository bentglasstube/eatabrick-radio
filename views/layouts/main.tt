<!DOCTYPE html>
<html>
  <head>
    <title>Eat a Brick Radio</title>
    <link rel="stylesheet" href="/style.css" />
  </head>

  <body>
    <div id="header">
      <div id="playing">
        <!-- audio src="<% stream_uri %>" controls -->
        <% if now_playing %>
          <a href="<% stream_uri %>" title="listen">
            Currently playing: <% now_playing %>
          </a>
        <% else %>
          Not currently playing.
        <% end %>
        <!-- /audio -->
      </div>
      <h1>Eat a Brick Radio</h1>
      <% include '_nav.tt' %>
    </div>
    
    <div id="body">
      <ul id="flash">
        <% foreach message in session.flash.keys %>
          <li class="<% session.flash.item(message) %>"><% message %></li>
          <% session.flash.delete(message) %>
        <% end %>
      </ul>
      
      <% content %>
    </div>
  </body>
</html>
